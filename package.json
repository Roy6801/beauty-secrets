{
	"name": "beauty-secrets",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"build": "next build",
		"dev": "next dev --turbopack",
		"start": "next start",
		"preview": "next build && next start",
		"build:log": "next build 2>&1 | tee logs/build-output.txt",
		"dev:log": "next dev --turbopack 2>&1 | tee logs/dev-output.txt",
		"start:log": "next start 2>&1 | tee logs/start-output.txt",
		"preview:log": "bun build:log && bun start:log",
		"tsc": "tsc --noEmit --pretty",
		"validate": "bun run check && bun run tsc",
		"check": "biome check .",
		"check:fix": "biome check --write .",
		"check:unsafe": "biome check --write --unsafe .",
		"generate:sections": "bun run scripts/generate-sections.ts",
		"configure": "bun generate:sections && bun cms:schema && bun cms:typegen",
		"cms:schema": "bun sanity schema extract",
		"cms:typegen": "bun sanity typegen generate",
		"cms:import": "sanity dataset import",
		"cms:export": "sanity dataset export"
	},
	"dependencies": {
		"@biomejs/biome": "^1.9.4",
		"@mdx-js/mdx": "^3.1.0",
		"@radix-ui/react-slot": "^1.1.2",
		"@sanity/icons": "^3.4.0",
		"@sanity/image-url": "1",
		"@sanity/preview-url-secret": "^2.0.4",
		"@sanity/vision": "3",
		"@t3-oss/env-nextjs": "^0.12.0",
		"@tailwindcss/aspect-ratio": "^0.4.2",
		"@tailwindcss/typography": "^0.5.16",
		"@vercel/toolbar": "^0.1.34",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"jsdom": "^26.0.0",
		"lucide-react": "^0.477.0",
		"next": "15.2.0",
		"next-sanity": "^9.8.60",
		"next-themes": "^0.4.4",
		"react": "^19.0.0",
		"react-dom": "^19.0.0",
		"rehype-autolink-headings": "^7.1.0",
		"rehype-external-links": "^3.0.0",
		"rehype-raw": "^7.0.0",
		"rehype-sanitize": "^6.0.0",
		"rehype-slug": "^6.0.0",
		"remark-breaks": "^4.0.0",
		"remark-emoji": "^5.0.1",
		"remark-gfm": "^4.0.1",
		"sanity": "3",
		"sanity-plugin-markdown": "^4.1.2",
		"sonner": "^2.0.1",
		"styled-components": "6",
		"tailwind-merge": "^3.0.2",
		"tailwindcss-animate": "^1.0.7",
		"zod": "^3.24.2"
	},
	"devDependencies": {
		"@tailwindcss/postcss": "^4",
		"@types/jsdom": "^21.1.7",
		"@types/node": "^20",
		"@types/react": "^19",
		"@types/react-dom": "^19",
		"babel-plugin-react-compiler": "^19.0.0-beta-e1e972c-20250221",
		"groq-cli": "^0.4.1",
		"tailwindcss": "^4",
		"typescript": "^5"
	}
}
